{

	"manifest_version": 2,
	"name": "Invert",
	"version": "1.0",

	"description": "Adds a page inversion toggle",

	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},

	"permissions": [
		"activeTab"
	],

	"browser_action": {
		"default_icon": "icon.svg",
		"default_title": "Invert",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["invert.js"]
		}
	]
}
